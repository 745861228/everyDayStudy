<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="88px"
        android:gravity="center"
        android:background="@mipmap/my" android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="我的主页"
        />
    <com.zhy.autolayout.AutoLinearLayout

        android:id="@+id/my_top_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/my2"
        android:orientation="horizontal" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_image"
            android:layout_width="192px"
            android:layout_height="192px"
            android:layout_marginLeft="95px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="65px"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@mipmap/head" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:visibility="gone"
            android:id="@+id/my_log_ll_show"
            android:layout_gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_unlog_tv"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:text="编辑昵称"
                android:textColor="#ffffff"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/my_log_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18px"
                android:layout_alignParentRight="true"
                android:src="@mipmap/dk"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/my_unlog_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="53px" >
            <Button
                android:id="@+id/My_top_log"
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:background="@mipmap/landingbutton"
                android:textColor="#ffffff"
                android:layout_marginTop="85px"
                android:text="立即登录"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/account"
                android:layout_marginTop="22px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:textColor="#ffffff"
                android:text="登陆后可云同步课程"
                android:textSize="15sp" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>


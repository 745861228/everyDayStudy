<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="88px"
        android:background="#f95d51" >
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/my_sign_up_iv_back"
            android:layout_width="80px"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/enroll_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/back" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_linear_border"
        android:divider="@drawable/shape_divider_linear"
        android:layout_marginTop="50px"
        android:orientation="vertical"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:layout_marginRight="18px"
            android:orientation="horizontal" >
            <EditText
                android:background="@null"
                android:id="@+id/my_sign_up_phone_num"
                android:layout_width="0px"
                android:layout_height="88px"
                android:layout_weight="1"
                android:digits="1234567890."
                android:drawableLeft="@mipmap/phone"
                android:drawablePadding="30px"
                android:drawableStart="@mipmap/phone"
                android:gravity="left|center_vertical"
                android:hint="手机号码(即账号)"
                android:paddingLeft="20px"
                android:singleLine="true"
                android:textColorHint="#cbcbcb"
                android:textColor="#333333"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/my_sign_up_get_captcha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@mipmap/loginmumb"
                android:text="发送验证码"
                android:textColor="#43e9c0"
                android:textSize="13sp" />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="18px"
            android:background="#DEDEDE"/>
        <EditText
            android:background="@null"
            android:id="@+id/my_sign_up_enter_captcha"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:drawableLeft="@mipmap/numb"
            android:drawablePadding="30px"
            android:drawableStart="@mipmap/numb"
            android:gravity="left|center_vertical"
            android:hint="6位验证码"
            android:paddingLeft="16px"
            android:singleLine="true"
            android:textColorHint="#cbcbcb"
            android:textColor="#333333"
            android:textSize="16sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="18px"
            android:background="#DEDEDE"/>
        <EditText
            android:background="@null"
            android:id="@+id/my_sign_up_pwd"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:drawableLeft="@mipmap/code"
            android:drawablePadding="30px"
            android:drawableStart="@mipmap/code"
            android:gravity="left|center_vertical"
            android:hint="设置密码"
            android:inputType="textPassword"
            android:paddingLeft="16px"
            android:singleLine="true"
            android:password="true"
            android:textColorHint="#cbcbcb"
            android:textColor="#333333"
            android:textSize="16sp" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px" >
        <TextView
            android:id="@+id/my_sigup_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:layout_marginTop="22px"
            android:textColor="#f95d51"
            android:textSize="13sp"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <Button
        android:id="@+id/my_sign_up_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px"
        android:layout_marginTop="112px"
        android:gravity="center"
        android:paddingBottom="20px"
        android:paddingTop="20px"
        android:text="提交"
        android:background="@mipmap/logobutton"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <com.zhy.autolayout.AutoLinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/my_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:textColor="#666666"
            android:text="注册即表示已阅读并同意   "
            android:textSize="13sp" />
        <TextView
            android:id="@+id/my_sign_up_notice_http"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="《用户协议与隐私政策》"
            android:textColor="#67d2b7"
            android:textSize="13sp"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
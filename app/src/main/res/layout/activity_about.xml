<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_title_height" >

            <ImageView
                android:id="@+id/about_back"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="20dp"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:text="关于我们"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_text_size" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background_color"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/about_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:paddingTop="65dp"
            android:src="@mipmap/aboat" />

        <TextView
            android:id="@+id/about_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_imageview"
            android:layout_centerHorizontal="true"
            android:paddingTop="28dp"
            android:text="每日学习一点点，每天都是更好的自己"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_text_size" />

        <TextView
            android:id="@+id/about_textview_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_textview_title"
            android:layout_centerHorizontal="true"
            android:paddingTop="265dp"
            android:textColor="#f95d51"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/about_textview_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_textview_version"
            android:layout_centerHorizontal="true"
            android:paddingTop="12dp"
            android:text="每日学网址：http://meirixue.com"
            android:textColor="#666666"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_textview_url"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dp"
            android:text="联系电话：010-57076678"
            android:textColor="#666666"
            android:textSize="11sp" />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
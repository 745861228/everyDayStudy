<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="19dp"
        android:background="#c9c9c9"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="7dp"
        android:id="@+id/my_myclass"
        android:layout_width="fill_parent"
        android:layout_height="44dp" >
        <ImageView
            android:id="@+id/my_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@mipmap/mya" />
        <TextView
            android:id="@+id/my_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/my_iv1"
            android:layout_centerVertical="true"
            android:text="我的课程"
            android:textColor="#333333"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/my_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/myrig" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/my_download"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:visibility="gone" >
        <ImageView
            android:id="@+id/my_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@mipmap/myc" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/my_down"
            android:layout_centerVertical="true"
            android:text="离线下载"
            android:textColor="#333333"
            android:textSize="16sp" />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:src="@mipmap/myrig" />
    </com.zhy.autolayout.AutoLinearLayout>
    <View

        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="19dp"
        android:background="#c9c9c9"
        />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="7dp"
        android:id="@+id/my_collect"
        android:layout_width="fill_parent"
        android:layout_height="44dp" >
        <ImageView
            android:id="@+id/my_iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@mipmap/myb" />
        <TextView
            android:id="@+id/my_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/my_iv3"
            android:layout_centerVertical="true"
            android:text="收藏"
            android:textColor="#333333"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/my_iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/myrig" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="19dp"
        android:background="#c9c9c9"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="7dp"
        android:id="@+id/my_youhui"
        android:layout_width="fill_parent"
        android:layout_height="44dp" >
        <ImageView
            android:id="@+id/my_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@mipmap/coupon" />
        <TextView
            android:id="@+id/my_youhui_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_image1"
            android:layout_marginLeft="10dp"
            android:text="优惠券"
            android:textColor="#333333"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/my_youhui_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/my_iv6"
            android:layout_toRightOf="@+id/my_tv3"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#ffffff" />
        <ImageView
            android:id="@+id/my_youhui_ig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/myrig" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="19dp"
        android:background="#c9c9c9"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="7dp"
        android:id="@+id/my_msg"
        android:layout_width="fill_parent"
        android:layout_height="44dp" >
        <ImageView
            android:id="@+id/my_iv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@mipmap/myd" />
        <TextView
            android:id="@+id/my_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_iv5"
            android:layout_marginLeft="10dp"
            android:text="我的消息"
            android:textColor="#333333"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/my_message_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/my_iv6"
            android:layout_toRightOf="@+id/my_tv3"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#ffffff" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="19dp"
        android:background="#c9c9c9"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="7dp"
        android:id="@+id/my_feedback"
        android:layout_width="fill_parent"
        android:layout_height="44dp" >
        <ImageView
            android:id="@+id/my_iv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@mipmap/mye" />

        <ImageView
            android:id="@+id/my_iv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/myrig" />

        <TextView
            android:id="@+id/my_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="意见反馈"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/my_iv7" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="19dp"
        android:background="#c9c9c9"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="7dp"
        android:id="@+id/my_setting"
        android:layout_width="fill_parent"
        android:layout_height="44dp" >
        <ImageView
            android:id="@+id/my_iv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@mipmap/myf" />
        <TextView
            android:id="@+id/my_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/my_iv9"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textColor="#333333"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/my_iv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/myrig" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="19dp"
        android:background="#c9c9c9"
        />
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/dianzan_linearLayout"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20px">

        <CheckBox
            android:id="@+id/dianzan_cb"
            android:layout_width="40px"
            android:layout_height="40px"
            android:background="@drawable/dianzan_selector"
            android:button="@null"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/dianzan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:textColor="@color/gray"
            android:textSize="@dimen/circle_cirtop_content" />

    </com.zhy.autolayout.AutoLinearLayout>


    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:padding="3px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/share_linearLayout"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20px">

        <ImageView
            android:id="@+id/share_image"
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@mipmap/forwarding" />

        <TextView
            android:id="@+id/share_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:textColor="@color/gray"
            android:textSize="@dimen/circle_cirtop_content" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:padding="3px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/message_linearLayout"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20px">

        <ImageView
            android:id="@+id/message_image"
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@mipmap/message_comment" />

        <TextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:textColor="@color/gray"
            android:textSize="@dimen/circle_cirtop_content" />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
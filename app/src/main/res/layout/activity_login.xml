<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical" >

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="88px"
        android:background="#f95d51" >

        <ImageView
            android:id="@+id/sign_iv_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sign_iv_back"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:background="@drawable/setting_linear_border"
        android:divider="@drawable/shape_divider_linear"
        android:orientation="vertical" >


        <EditText
            android:id="@+id/my_et_sign_in_account"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginLeft="18px"
            android:layout_marginRight="18px"
            android:background="@null"
            android:drawableLeft="@mipmap/phone"
            android:drawablePadding="15dp"
            android:drawableStart="@mipmap/phone"
            android:hint="手机号/邮箱"
            android:minHeight="80px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#cbcbcb"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="24px"
            android:background="#DEDEDE" />

        <EditText
            android:id="@+id/my_et_sign_in_pwd"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginLeft="18px"
            android:layout_marginRight="18px"

            android:background="@null"
            android:drawableLeft="@mipmap/code"
            android:drawablePadding="15dp"
            android:drawableStart="@mipmap/code"
            android:hint="请输入密码"
            android:minHeight="80px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:singleLine="true"
            android:textColorHint="#cbcbcb"
            android:password="true"
            android:textColor="#333333"
            android:textSize="16sp" />
    </com.zhy.autolayout.AutoLinearLayout>




    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp" >

        <TextView
            android:id="@+id/my_sign_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:text="111"
            android:layout_marginTop="11dp"

            android:textColor="#f95d51"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/my_sign_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="11dp"
            android:text="忘记密码?"
            android:textColor="#666666"
            android:textSize="13sp" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <Button
        android:id="@+id/my_btn_sign_in"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="74dp"
        android:background="@mipmap/landb"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/my_btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/login"
        android:text="立即注册"
        android:textColor="#f95d51"
        android:textSize="18sp" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <!--第三方登录-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/my_btn_qq_sign_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/qq"/>
            <ImageView
                android:id="@+id/my_btn_wechat_sign_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/wechat"/>
            <ImageView
                android:id="@+id/my_btn_weibo_sign_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/weibo"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>